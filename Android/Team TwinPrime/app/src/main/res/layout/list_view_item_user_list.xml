<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/selector_background_empty">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <com.example.android.cfgprepapp.font.RobotoTextView
        android:id="@+id/text"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingLeft="0dp"
        android:text="Mandar Mhapsekar"
        android:textColor="@color/main_color_grey_700"
        android:textSize="16sp"/>


    <com.example.android.cfgprepapp.font.RobotoTextView
        android:id="@+id/text2"
        style="@style/TextViewAppearance.Caption1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:paddingLeft="0dp"
        android:text="23"
        android:textColor="@color/main_color_grey_700"
        android:textSize="16sp"/>
</LinearLayout>
