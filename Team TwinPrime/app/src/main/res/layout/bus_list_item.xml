<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color_grey_50"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.example.android.cfgprepapp.font.RobotoTextView
            android:id="@+id/train_status"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:background="@color/material_green_700" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_alignParentLeft="@+id/train_status"
            android:src="@drawable/bus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/main_color_grey_500"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <com.example.android.cfgprepapp.font.RobotoTextView
                android:id="@+id/list_item_sticky_header_social_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:paddingLeft="72dp"
                android:paddingTop="10dp"
                android:paddingRight="22dp"
                android:paddingBottom="4dp"
                android:text="TrainTitle"
                android:textColor="@color/main_color_grey_900"
                android:textSize="22dp"
                app:typeface="robotoRegular" />

            <com.example.android.cfgprepapp.font.RobotoTextView
                android:id="@+id/list_item_sticky_header_social_pdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="74dp"
                android:text="from Oklahoma"
                android:textColor="@color/material_grey_400"
                android:textSize="15dp"
                app:typeface="robotoLight" />
        </LinearLayout>
        <com.example.android.cfgprepapp.font.RobotoTextView
            android:id="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/material_grey_500"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            />

        <com.example.android.cfgprepapp.font.RobotoTextView
            android:id="@+id/platform"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_grey_700"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="20dp"
            android:text="Up"
            />
    </RelativeLayout>
</LinearLayout>