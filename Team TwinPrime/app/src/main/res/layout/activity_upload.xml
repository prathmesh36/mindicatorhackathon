<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_buttons"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                >
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_result_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reshead"
                        >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Upload Image"
                            android:textSize="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            >
                        </TextView>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="1dp"
                        android:background="#a19e9e"
                        android:id="@+id/resline"
                        android:layout_below="@+id/reshead"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/resline"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/defaultuser"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <com.example.android.cfgprepapp.view.cpb.CircularProgressButton
                                style="@style/CircularProgressBarStyle.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cpb_textIdle="Select Image"
                                app:cpb_textComplete="Selected"
                                android:id="@+id/chooseBn"
                                card_view:cpb_cornerRadius="6dp"
                                />
                            <com.example.android.cfgprepapp.view.cpb.CircularProgressButton
                                android:id="@+id/uploadBn"
                                style="@style/CircularProgressBarStyle.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cpb_textComplete="Uploaded"
                                app:cpb_textIdle="Upload Image"
                                card_view:cpb_cornerRadius="6dp"
                                android:visibility="gone"
                                />
                            <com.example.android.cfgprepapp.view.cpb.CircularProgressButton
                                style="@style/CircularProgressBarStyle.3"
                                android:layout_width="wrap_content"
                                android:id="@+id/CropBn"
                                android:layout_height="wrap_content"
                                app:cpb_textComplete="Cropped Image"
                                app:cpb_textIdle="Crop Image"
                                card_view:cpb_cornerRadius="6dp"
                                android:visibility="gone"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>
